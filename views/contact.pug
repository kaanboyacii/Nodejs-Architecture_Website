extends layouts/main-layout.pug
block content 
    .container-fluid.page-header.py-5.mb-5.wow.fadeIn(data-wow-delay='0.1s')
      .container.py-5
        h1.display-1.text-white.animated.slideInDown İletişim
        nav(aria-label='breadcrumb animated slideInDown')
          ol.breadcrumb.text-uppercase.mb-0
            li.breadcrumb-item
                a.text-white(href='/anasayfa') Anasayfa
            li.breadcrumb-item
                a.text-white(href='/iletisim') İletişim
    .container-xxl.py-5
      .container
        .text-center.mx-auto.mb-5.wow.fadeInUp(data-wow-delay='0.1s', style='max-width: 600px;')
          h4.section-title Bize Ulaşın
          h1.display-5.mb-4 Herhangi Bir Sorunuz Varsa, Lütfen Bize Ulaşın
        .row.g-5
          .col-lg-6.wow.fadeInUp(data-wow-delay='0.1s')
            .d-flex.flex-column.justify-content-between.h-100
              .bg-light.d-flex.align-items-center.w-100.p-4.mb-4
                .d-flex.flex-shrink-0.align-items-center.justify-content-center.bg-dark(style='width: 55px; height: 55px;')
                  i.fa.fa-map-marker-alt.text-primary
                .ms-4
                  p.mb-2 Adres
                  h3.mb-0 123 Street, New York, USA
              .bg-light.d-flex.align-items-center.w-100.p-4.mb-4
                .d-flex.flex-shrink-0.align-items-center.justify-content-center.bg-dark(style='width: 55px; height: 55px;')
                  i.fa.fa-phone-alt.text-primary
                .ms-4
                  p.mb-2 Telefon
                  h3.mb-0 +012 345 6789
              .bg-light.d-flex.align-items-center.w-100.p-4
                .d-flex.flex-shrink-0.align-items-center.justify-content-center.bg-dark(style='width: 55px; height: 55px;')
                  i.fa.fa-envelope-open.text-primary
                .ms-4
                  p.mb-2 E-posta Adresi
                  h3.mb-0 info@example.com
          .col-lg-6.wow.fadeInUp(data-wow-delay='0.5s')
            p.mb-4
              | The contact form is currently inactive. Get a functional and working contact form with Ajax &amp; PHP in a few minutes. Just copy and paste the files, add a little code and you&apos;re done. 
              a(href='https://htmlcodex.com/contact-form') Download Now
              | .
            form
              .row.g-3
                .col-md-6
                  .form-floating
                    input#name.form-control(type='text', placeholder='Your Name')
                    label(for='name') Your Name
                .col-md-6
                  .form-floating
                    input#email.form-control(type='email', placeholder='Your Email')
                    label(for='email') Your Email
                .col-12
                  .form-floating
                    input#subject.form-control(type='text', placeholder='Subject')
                    label(for='subject') Subject
                .col-12
                  .form-floating
                    textarea#message.form-control(placeholder='Leave a message here', style='height: 100px')
                    label(for='message') Message
                .col-12
                  button.btn.btn-primary.w-100.py-3(type='submit') Send Message

    .container-xxl.pt-5.px-0.wow.fadeIn(data-wow-delay='0.1s')
      iframe.w-100.mb-n2(style='height: 450px;', src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3001156.4288297426!2d-78.01371936852176!3d42.72876761954724!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4ccc4bf0f123a5a9%3A0xddcfc6c1de189567!2sNew%20York%2C%20USA!5e0!3m2!1sen!2sbd!4v1603794290143!5m2!1sen!2sbd', allowfullscreen='', aria-hidden='false', tabindex='0', frameborder='0')